<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9EA"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ui.user.UserHomeActivity">

    <Button
        android:id="@+id/searchProductButton"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="15dp"
        android:background="@drawable/buttonshape"
        android:enabled="true"
        android:onClick="gotToSearchProductActivity"
        android:text="Search for Products"
        android:textColor="#3F51B5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchRestaurantButton" />

    <Button
        android:id="@+id/seeRecipesButton"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="15dp"
        android:background="@drawable/buttonshape"
        android:enabled="true"
        android:onClick="gotToSeeRecipesActivity"
        android:text="My recipes"
        android:textColor="#3F51B5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createRecipeButton"
        tools:text="My recipes" />

    <Button
        android:id="@+id/createRecipeButton"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="15dp"
        android:background="@drawable/buttonshape"
        android:enabled="true"
        android:onClick="gotToCreateRecipeActivity"
        android:text="Create recipe"
        android:textColor="#3F51B5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchDishButton"
        tools:text="Create recipe" />

    <Button
        android:id="@+id/searchDishButton"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="15dp"
        android:background="@drawable/buttonshape"
        android:enabled="true"
        android:onClick="gotToSearchDishActivity"
        android:text="@string/search_for_dishes"
        android:textColor="#3F51B5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchProductButton" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="Greenfood"
        android:textColor="#009688"
        android:textSize="36sp"
        app:fontFamily="casual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/searchRestaurantButton"
        android:layout_width="225dp"
        android:layout_height="47dp"
        android:layout_gravity="start"
        android:layout_marginTop="80dp"
        android:background="@drawable/buttonshape"
        android:enabled="true"
        android:onClick="searchRestaurant"
        android:text="Search Restaurants"
        android:textColor="#3F51B5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:text="Search Restaurants" />


</androidx.constraintlayout.widget.ConstraintLayout>